<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">


	<welcome-file-list>
		<welcome-file>newHome.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>VaccineController</servlet-name>
		<servlet-class>controller.vaccineController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminMangerController</servlet-name>
		<servlet-class>controller.AdminMangerController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HospitalMangerController</servlet-name>
		<servlet-class>controller.HospitalMangerController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserMangerController</servlet-name>
		<servlet-class>controller.UserMangerController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>VaccineController</servlet-name>
		<url-pattern>/VaccineController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminMangerController</servlet-name>
		<url-pattern>/AdminMangerController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HospitalMangerController</servlet-name>
		<url-pattern>/HospitalMangerController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserMangerController</servlet-name>
		<url-pattern>/UserMangerController</url-pattern>
	</servlet-mapping>


	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

</web-app>